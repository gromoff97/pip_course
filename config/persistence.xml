<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="course.database" transaction-type="JTA">
        <jta-data-source>jdbc/studs</jta-data-source>
        <class>course.entity.EntityStationsStates</class>
        <properties>
            <property name="javax.persistence.schema-generation.database.action"
                      value="drop-and-create"/>
        </properties>
    </persistence-unit>

</persistence>
